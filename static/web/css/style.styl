.navbar
  box-shadow none
  margin 0 !important
  padding 0 !important
  font-weight bold

.navbar-brand
  padding 0.2rem !important
  width 210px !important
  height 3rem
  position relative
  background-color $odecopack-color_1
  margin-right 3rem

.navbar-brand:after
