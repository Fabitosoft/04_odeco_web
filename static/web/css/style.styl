    margin 0
    padding 0
    border-radius(5px)

  .md-form
    margin-bottom 0.5rem

.barra-soluciones
  margin-top -9rem
  .botones-soluciones
    .boton
      margin 0 !important
      padding 0 !important
      text-align center !important
      .contenido
        height 100%
        background-color white
