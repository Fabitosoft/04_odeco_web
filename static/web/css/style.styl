  fill-rule evenodd

/* no underline */

.streak
  display block
  position relative
  overflow hidden
  background #e5e5e5
  height 250px
  &.streak-lg
    height 400px
  &.streak-photo
    background-size cover
    background-position center
    background-repeat no-repeat
  &.no-flex
    padding-top 3.125rem
    padding-bottom 3.125rem
    height auto

@media (max-width: 450px)
  .streak
    &.streak-long
